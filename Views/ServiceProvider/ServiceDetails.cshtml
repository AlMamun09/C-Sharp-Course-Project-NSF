@model LocalScout.Models.ProviderService
@{
    ViewData["Title"] = "Service Details";
}

<!-- Non-Scrolling Header Section -->
<div class="admin-content-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>@Model.ServiceName</h1>
            <p class="lead mb-0">Review the details for your service listing.</p>
        </div>
        <div>
            <a asp-action="EditService" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fa-solid fa-pencil me-2"></i> Edit Service
            </a>
            <a asp-action="MyServices" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

<!-- Scrollable Main Content Section -->
<div class="admin-content-main">
    <div class="row">
        <div class="col-md-8">
            <h4>Description</h4>
            <p>@Model.Description</p>

            <h4 class="mt-4">Pricing</h4>
            @if (Model.IsNegotiable)
            {
                <p>The price for this service is negotiable.</p>
            }
            else
            {
                <dl class="row">
                    <dt class="col-sm-3">Rate</dt>
                    <dd class="col-sm-9">TK @Model.Price</dd>

                    <dt class="col-sm-3">Unit</dt>
                    <dd class="col-sm-9">@Model.PricingUnit</dd>
                </dl>
            }
        </div>
    </div>

    <h3 class="mt-4">Image Gallery</h3>
    <hr />
    @if (Model.ImageUrls.Any())
    {
        <div class="row">
            @foreach (var imageUrl in Model.ImageUrls)
            {
                <div class="col-md-4 mb-3">
                    <img src="@imageUrl" class="img-fluid rounded shadow-sm" alt="Service Gallery Image" />
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No gallery images have been uploaded for this service.</p>
    }
</div>
