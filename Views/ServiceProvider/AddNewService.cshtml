@model LocalScout.ViewModels.AddNewServiceViewModel

@{
    ViewData["Title"] = "Add a New Service";
}

<h1>@ViewData["Title"]</h1>
<p>Select a category and provide the details for the new service you want to offer.</p>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="AddNewService" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="SelectedServiceCategoryId" class="control-label"></label>
                <select id="SelectedServiceCategoryId" asp-for="SelectedServiceCategoryId" asp-items="@Model.ServiceCategories" class="form-select">
                    <option value="">-- Please select a category --</option>
                </select>
                <span asp-validation-for="SelectedServiceCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="PricingUnit" class="control-label"></label>
                    <input asp-for="PricingUnit" class="form-control" />
                    <span asp-validation-for="PricingUnit" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GalleryImages" class="control-label"></label>
                <input asp-for="GalleryImages" class="form-control" type="file" multiple />
                <small class="form-text text-muted">You can select multiple images for your gallery.</small>
                <span asp-validation-for="GalleryImages" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-success">Add Service</button>
                <a asp-action="MyServices" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Find the dropdown menu by its ID
            const categoryDropdown = document.getElementById('SelectedServiceCategoryId');

            if (categoryDropdown) {
                // Add an event listener that fires whenever the selection changes
                categoryDropdown.addEventListener('change', function () {
                    // Check if the selected value is our special 'request_new' value
                    if (this.value === 'request_new') {
                        // If it is, redirect the user to the new page
                        window.location.href = '@Url.Action("RequestNewCategory", "ServiceProvider")';
                    }
                });
            }
        });
    </script>
}