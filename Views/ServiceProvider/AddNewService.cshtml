@model LocalScout.ViewModels.AddNewServiceViewModel
@{
    ViewData["Title"] = "Add a New Service";
}

<!-- Non-Scrolling Header Section -->
<div class="admin-content-header">
    <h1>@ViewData["Title"]</h1>
    <p class="lead mb-0">Select a category and provide the details for the new service you want to offer.</p>
</div>

<!-- Scrollable Main Content Section -->
<div class="admin-content-main">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="AddNewService" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="SelectedServiceCategoryId" class="control-label"></label>
                    <select id="SelectedServiceCategoryId" asp-for="SelectedServiceCategoryId" asp-items="@Model.ServiceCategories" class="form-select">
                        <option value="">-- Please select a category --</option>
                    </select>
                    <span asp-validation-for="SelectedServiceCategoryId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group form-check mb-3">
                    <input class="form-check-input" asp-for="IsNegotiable" />
                    <label class="form-check-label" asp-for="IsNegotiable"></label>
                </div>

                <div id="price-container">
                    <div class="row">
                        <div class="col-md-6 form-group mb-3">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group mb-3">
                            <label asp-for="PricingUnit" class="control-label"></label>
                            <input asp-for="PricingUnit" class="form-control" />
                            <span asp-validation-for="PricingUnit" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="GalleryImages" class="control-label"></label>
                    <input asp-for="GalleryImages" class="form-control" type="file" multiple />
                    <small class="form-text text-muted">You can select multiple images for your gallery.</small>
                    <span asp-validation-for="GalleryImages" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Add Service</button>
                    <a asp-action="MyServices" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const isNegotiableCheckbox = document.getElementById('IsNegotiable');
            const priceContainer = document.getElementById('price-container');

            function togglePriceFields() {
                if (isNegotiableCheckbox.checked) {
                    priceContainer.style.display = 'none';
                } else {
                    priceContainer.style.display = 'block';
                }
            }
            togglePriceFields();
            isNegotiableCheckbox.addEventListener('change', togglePriceFields);

            const categoryDropdown = document.getElementById('SelectedServiceCategoryId');
            if (categoryDropdown) {
                categoryDropdown.addEventListener('change', function () {
                    if (this.value === 'request_new') {
                        window.location.href = '@Url.Action("RequestNewCategory", "ServiceProvider")';
                    }
                });
            }
        });
    </script>
}
