@model LocalScout.ViewModels.ProviderProfileViewModel
@using LocalScout.Services
@inject ITimeZoneConverterService TimeZoneService
@{
    ViewData["Title"] = $"{Model.ProviderProfile.BusinessName ?? Model.ProviderProfile.FirstName}'s Profile";
    Layout = ViewData["Layout"] as string; 
}

<div class="admin-content-header py-3"> <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-1">@(Model.ProviderProfile.BusinessName ?? $"{Model.ProviderProfile.FirstName} {Model.ProviderProfile.LastName}")</h1>
            
            <p class="mb-0 text-muted"> 
                @if (Model.IsOwner)
                {
                    <span>Welcome to your dashboard. Review your public profile.</span>
                }
                else
                {
                    <span>Provider Profile & Stats.</span>
                }
            </p>
        </div>
        <div>
            @if (Model.IsOwner)
            {
                <a asp-action="EditProfile" class="btn btn-primary">
                    <i class="fa-solid fa-pencil me-2"></i> Edit Business Profile
                </a>
            }
        </div>
    </div>
</div>

<div class="admin-content-main">
    
    @* FIX #1: Added 'mt-4' here to separate this content from the header above *@
    <div class="row mt-3">

        @* FIX #2: Changed mb-4 to mb-3 *@
        <div class="col-lg-4 mb-3">
            <div class="card h-100">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    @if (!string.IsNullOrEmpty(Model.ProviderProfile.ProfilePictureUrl))
                    {
                        <img src="@Model.ProviderProfile.ProfilePictureUrl" class="img-fluid rounded-circle shadow-sm mb-3 mx-auto"
                             style="width: 200px; height: 200px; object-fit: cover;" alt="Profile Picture" />
                    }
                    else
                    {
                        <div class="border rounded-circle bg-light d-flex align-items-center justify-content-center mb-3 mx-auto"
                             style="width: 200px; height: 200px;">
                            <i class="fa-solid fa-user fa-4x text-muted"></i>
                        </div>
                    }
                    <h4 class="card-title">@(Model.ProviderProfile.BusinessName ?? $"{Model.ProviderProfile.FirstName} {Model.ProviderProfile.LastName}")</h4>
                    <p class="text-muted">Member Since @TimeZoneService.ConvertToLocalTime(Model.ProviderProfile.CreatedAt.UtcDateTime).ToString("MMMM yyyy")</p>
                </div>
            </div>
        </div>

        <div class="col-lg-8">

            @* FIX #2: Changed mb-4 to mb-3 *@
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fa-solid fa-circle-info me-2"></i> Business Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.ProviderProfile.FirstName @Model.ProviderProfile.LastName</dd>

                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">@(Model.ProviderProfile.BusinessAddress ?? "N/A")</dd>

                        <dt class="col-sm-4">Business Hours</dt>
                        <dd class="col-sm-8">@(Model.ProviderProfile.BusinessHours ?? "N/A")</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@(Model.ProviderProfile.BusinessPhoneNumber ?? "N/A")</dd>

                         <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.ProviderProfile.Email</dd>
                    </dl>
                    
                    @if (!string.IsNullOrEmpty(Model.ProviderProfile.BusinessDescription))
                    {
                        <hr />
                        <h6 class="text-muted">About Us</h6>
                        <p class="mb-0">@Model.ProviderProfile.BusinessDescription</p>
                    }
                </div>
            </div>

            @* FIX #2: Changed mb-4 to mb-3 (applied to the column wrapper in responsive mode) *@
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fa-solid fa-history me-2"></i> Provider Stats</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center g-0">
                        <div class="col">
                            <h4 class="mb-0">@Model.Stats.TotalRequested</h4>
                            <small class="text-muted">Total Jobs</small>
                        </div>
                        <div class="col">
                            <h4 class="mb-0">@Model.Stats.TotalConfirmed</h4>
                            <small class="text-muted">Ongoing</small>
                        </div>
                        <div class="col">
                            <h4 class="mb-0">@Model.Stats.TotalCompleted</h4>
                            <small class="text-muted">Completed</small>
                        </div>
                        <div class="col">
                            <h4 class="mb-0">@Model.Stats.TotalCanceled</h4>
                            <small class="text-muted">Canceled</small>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>