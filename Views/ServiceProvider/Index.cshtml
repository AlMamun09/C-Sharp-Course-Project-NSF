@model LocalScout.Data.ApplicationUser

@{
    ViewData["Title"] = "Provider Dashboard";
}


<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Your Business Profile</h1>
    <div>
        <a asp-action="MyServices" class="btn btn-success">Manage My Services</a>
        <a asp-controller="Dashboard" asp-action="EditUserProfile" class="btn btn-primary">Edit My Profile</a>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
        {
            <img src="@Model.ProfilePictureUrl" class="img-fluid rounded" alt="Profile Picture" />
        }
        else
        {
            <div class="border rounded bg-light d-flex align-items-center justify-content-center" style="height: 300px; width: 300px;">
                <span>No Profile Picture</span>
            </div>
        }
    </div>
    <div class="col-md-8">
        <h3>@Model.BusinessName</h3>
        <dl class="row">
            <dt class="col-sm-4">Contact Name</dt>
            <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-4">Business Phone</dt>
            <dd class="col-sm-8">@Model.BusinessPhoneNumber</dd>

            <dt class="col-sm-4">Business Address</dt>
            <dd class="col-sm-8">@Model.BusinessAddress</dd>

            <dt class="col-sm-4">Contact Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>
        </dl>
        <h4 class="mt-3">About Us</h4>
        <p>@Model.BusinessDescription</p>
    </div>
</div>

@section Scripts {
@{
    // This renders a special partial view that handles the toast notifications.
    await Html.RenderPartialAsync("_NotificationToastPartial", (List<LocalScout.Models.Notification>)ViewBag.Notifications);
}
}