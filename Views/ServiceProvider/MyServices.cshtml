@model List<LocalScout.Models.ProviderService>
@{
    ViewData["Title"] = "My Services";
}

<div class="admin-content-header py-3">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-1">@ViewData["Title"]</h1>
            <p class="mb-0 text-muted">Manage all the services you offer to customers.</p>
        </div>
        <div>
            <a asp-action="AddNewService" class="btn btn-primary">
                <i class="fa-solid fa-plus me-2"></i> Add New Service
            </a>
            <a asp-action="RequestNewCategory" class="btn btn-secondary">Request New Category</a>
        </div>
    </div>
</div>

<div class="admin-content-main">
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fa-solid fa-list-check fa-4x text-muted mb-3"></i>
            <h4>You have not added any services yet.</h4>
            <p>Click "Add New Service" to get started and reach new customers.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 100px;">Image</th> <th>Service Name</th>
                        <th>Price</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model)
                    {
                        <tr>
                            <td>
                                <img src="@(service.ImageUrls.FirstOrDefault() ?? "https://placehold.co/100x100/eee/ccc?text=Service")"
                                     class="img-fluid rounded" 
                                     style="width: 80px; height: 80px; object-fit: cover;" 
                                     alt="@service.ServiceName" />
                            </td>
                            <td>@service.ServiceName</td>
                            <td>
                                @if (service.IsNegotiable)
                                {
                                    <span class="badge bg-secondary">Negotiable</span>
                                }
                                else
                                {
                                    <span>TK @service.Price.ToString("N0") / @service.PricingUnit</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a asp-action="ServiceDetails" asp-route-id="@service.Id" class="btn btn-sm btn-outline-info" title="Details">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    <a asp-action="EditService" asp-route-id="@service.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@service.Id" title="Delete">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>

                        <div class="modal fade" id="deleteModal-@service.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@service.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form asp-action="DeleteService" asp-route-id="@service.Id" method="post">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel-@service.Id">Confirm Deletion</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to permanently delete the service: <strong>@service.ServiceName</strong>?</p>
                                            <p class="text-danger">This action cannot be undone.</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger">Yes, Delete Service</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    }
</div>