@model List<LocalScout.Models.ProviderService>

@{
    ViewData["Title"] = "My Services";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
    <div>
        <a asp-action="AddNewService" class="btn btn-primary">Add New Service</a>
        <a asp-action="RequestNewCategory" class="btn btn-secondary">Request New Category</a>
    </div>
</div>
<hr />

@if (!Model.Any())
{
    <p>You have not added any services yet. Click "Add New Service" to get started.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Service Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.ServiceName</td>
                    <td>TK @service.Price @service.PricingUnit</td>
                    <td class="d-flex align-items-center">
                        <a asp-action="ServiceDetails" asp-route-id="@service.Id" class="btn btn-sm btn-info">Details</a>
                        <span class="mx-2">|</span>
                        <a asp-action="EditService" asp-route-id="@service.Id">Edit</a>
                        <span class="mx-1">|</span>
                        <form asp-action="DeleteService" asp-route-id="@service.Id" method="post"
                            onsubmit="return confirm('Are you sure you want to permanently delete this service?');">
                            <button type="submit" class="btn btn-link text-danger p-0">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}