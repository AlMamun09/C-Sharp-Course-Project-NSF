<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - User Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="admin-body-lock">
    <div class="d-flex">
        <!-- Sidebar Navigation -->
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white admin-sidebar">
            <div class="d-flex justify-content-between align-items-center mb-3 mb-md-0 me-md-auto w-100">
                <a asp-controller="Dashboard" asp-action="Index"
                    class="d-flex align-items-center text-white text-decoration-none">
                    <span class="fs-4">My Dashboard</span>
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light" title="Back to Main Site">
                    <i class="fa-solid fa-house fa-lg"></i>
                </a>
            </div>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a asp-controller="Dashboard" asp-action="MyProfile" class="nav-link text-white">
                        <i class="fa-solid fa-user me-2"></i> My Profile
                    </a>
                </li>
                <li>
                    <a asp-controller="Dashboard" asp-action="MyBookings" class="nav-link text-white">
                        <i class="fa-solid fa-calendar-check me-2"></i> My Bookings
                    </a>
                </li>
            </ul>
            <hr>
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="nav-link text-white w-100 text-start">
                    <i class="fa-solid fa-right-from-bracket me-2"></i> Sign Out
                </button>
            </form>
        </div>

        <!-- Main Content Area -->
        <main class="flex-grow-1 admin-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ToastPartial" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>