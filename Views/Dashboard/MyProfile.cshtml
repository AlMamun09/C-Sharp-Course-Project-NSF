@model LocalScout.Data.ApplicationUser
@using LocalScout.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "My Profile";
}

<!-- Non-Scrolling Header Section -->
<div class="admin-content-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>@ViewData["Title"]</h1>
            <p class="lead mb-0">Review your personal information and account settings.</p>
        </div>
        <div>
            <a asp-action="EditUserProfile" class="btn btn-primary">
                <i class="fa-solid fa-pencil me-2"></i> Edit Profile
            </a>
        </div>
    </div>
</div>

<!-- Scrollable Main Content Section -->
<div class="admin-content-main">
    <div class="row mt-3">
        <!-- Profile Picture Column -->
        <div class="col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" class="img-fluid rounded-circle shadow-sm mb-3"
                             style="width: 200px; height: 200px; object-fit: cover;" alt="Profile Picture" />
                    }
                    else
                    {
                        <div class="border rounded-circle bg-light d-flex align-items-center justify-content-center mb-3 mx-auto"
                             style="width: 200px; height: 200px;">
                            <i class="fa-solid fa-user fa-4x text-muted"></i>
                        </div>
                    }
                    <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">Member Since @Model.CreatedAt.ToString("MMMM yyyy")</p>
                </div>
            </div>
        </div>

        <!-- Details Column -->
        <div class="col-lg-8">
            <!-- Account Details Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-circle-info me-2"></i> Account Details
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4">Email Address</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Primary Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>
                </div>
            </div>

            <!-- Become a Provider Card (Conditional) -->
            @if (!User.IsInRole("ServiceProvider"))
            {
                <div class="card bg-light border-primary">
                    <div class="card-body py-3">
                        <h5 class="card-title">Ready to Offer Your Services?</h5>
                        <p class="card-text mb-2">Ready to grow your business? List your services and connect with local customers.</p>
                        <a asp-action="BecomeProvider" class="btn btn-success">
                            <i class="fa-solid fa-store me-2"></i> Become a Provider
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

