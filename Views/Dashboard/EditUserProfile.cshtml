@model LocalScout.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Edit My Profile";
}

<!-- Non-Scrolling Header Section -->
<div class="admin-content-header">
    <h1>@ViewData["Title"]</h1>
    <p class="lead mb-0">Update your personal information below.</p>
</div>

<!-- Scrollable Main Content Section -->
<div class="admin-content-main">
    <form asp-action="EditUserProfile" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="row mt-3">
            <!-- Profile Picture Column -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Profile Picture</h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(Model.CurrentProfilePictureUrl))
                        {
                            <img src="@Model.CurrentProfilePictureUrl" id="profile-pic-preview"
                                 class="img-fluid rounded-circle shadow-sm mb-3"
                                 style="width: 200px; height: 200px; object-fit: cover;" alt="Current Profile Picture" />
                        }
                        else
                        {
                            <div id="profile-pic-placeholder"
                                 class="border rounded-circle bg-light d-flex align-items-center justify-content-center mb-3 mx-auto"
                                 style="width: 200px; height: 200px;">
                                <i class="fa-solid fa-user fa-4x text-muted"></i>
                            </div>
                        }
                        <label asp-for="ProfilePicture" class="form-label">Upload New Picture</label>
                        <input asp-for="ProfilePicture" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- User Details Column -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Personal Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Address"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">
                <i class="fa-solid fa-save me-2"></i> Save Changes
            </button>
            <a asp-action="MyProfile" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

