@using Microsoft.AspNetCore.Identity
@using NeighborhoodServiceFinder.Data
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "My Dashboard";
}

<h1>@ViewData["Title"]</h1>

<p>Welcome to your personal dashboard. From here you can manage your profile and services.</p>

<hr />

<div>
    <a asp-action="EditUserProfile" class="btn btn-info">Edit My Profile</a>

    @if (User.IsInRole("ServiceProvider"))
    {
        <a asp-controller="ServiceProvider" asp-action="Index" class="btn btn-success">Provider Dashboard</a>
    }
    else
    {
        <a asp-action="BecomeProvider" class="btn btn-primary">Become a Service Provider</a>
    }
</div>

