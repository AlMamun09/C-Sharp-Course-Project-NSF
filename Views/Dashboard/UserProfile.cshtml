@model LocalScout.ViewModels.UserProfileViewModel
@using LocalScout.Data
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@* ADD THESE TWO LINES TO INJECT THE SERVICE *@
@using LocalScout.Services
@inject ITimeZoneConverterService TimeZoneService

@{
    ViewData["Title"] = $"{Model.UserProfile.FirstName}'s Profile";
    Layout = ViewData["Layout"] as string;
    var isOwner = (await UserManager.GetUserAsync(User))?.Id == Model.UserProfile.Id;
}

<div class="admin-content-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1>@Model.UserProfile.FirstName @Model.UserProfile.LastName</h1>
            <p class="lead mb-0">
                @if (isOwner)
                {
                    <span>Review your personal information and account settings.</span>
                }
                else
                {
                    <span>Customer Profile</span>
                }
            </p>
        </div>
        <div>
            @if (isOwner)
            {
                <a asp-action="EditUserProfile" class="btn btn-primary">
                    <i class="fa-solid fa-pencil me-2"></i> Edit Profile
                </a>
            }
            else if (User.IsInRole("ServiceProvider"))
            {
                <a asp-controller="ServiceProvider" asp-action="MyBookings" class="btn btn-secondary">Back to Bookings</a>
            }
        </div>
    </div>
</div>

<div class="admin-content-main">
    <div class="row mt-2 mb-2
    ">
        <div class="col-lg-4 mb-4">
            <div class="card h-85">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.UserProfile.ProfilePictureUrl))
                    {
                        <img src="@Model.UserProfile.ProfilePictureUrl" class="img-fluid rounded-circle shadow-sm mb-3"
                             style="width: 200px; height: 200px; object-fit: cover;" alt="Profile Picture" />
                    }
                    else
                    {
                        <div class="border rounded-circle bg-light d-flex align-items-center justify-content-center mb-3 mx-auto"
                             style="width: 200px; height: 200px;">
                            <i class="fa-solid fa-user fa-4x text-muted"></i>
                        </div>
                    }
                    <h4 class="card-title">@Model.UserProfile.FirstName @Model.UserProfile.LastName</h4>
                    
                    @* THIS IS THE CORRECTED LINE: *@
                    <p class="text-muted">Member Since @TimeZoneService.ConvertToLocalTime(Model.UserProfile.CreatedAt.UtcDateTime).ToString("MMMM yyyy")</p>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-circle-info me-2"></i> Account Details
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.UserProfile.FirstName @Model.UserProfile.LastName</dd>

                        <dt class="col-sm-4">Email Address</dt>
                        <dd class="col-sm-8">@Model.UserProfile.Email</dd>

                        <dt class="col-sm-4">Primary Address</dt>
                        <dd class="col-sm-8">@Model.UserProfile.Address</dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fa-solid fa-history me-2"></i> Booking History
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center g-0">
                        <div class="col">
                            <h4 class="mb-0">@Model.Stats.TotalRequested</h4>
                            <small class="text-muted">Requested</small>
                        </div>
                        <div class="col">
                            <h4 class="mb-0">@Model.Stats.TotalConfirmed</h4>
                            <small class="text-muted">Confirmed</small>
                        </div>
                        <div class="col">
                            <h4 class="mb-0">@Model.Stats.TotalCompleted</h4>
                            <small class="text-muted">Completed</small>
                        </div>
                        <div class="col">
                            <h4 class="mb-0">@Model.Stats.TotalCanceled</h4>
                            <small class="text-muted">Canceled</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (isOwner && !User.IsInRole("ServiceProvider"))
        {
            <div class="card bg-light border-primary mb-">
                <div class="card-body py-3">
                    <h5 class="card-title">Ready to Offer Your Services?</h5>
                    <p class="card-text mb-2">Ready to grow your business? List your services and connect with local
                        customers.</p>
                    <a asp-action="BecomeProvider" class="btn btn-success">
                        <i class="fa-solid fa-store me-2"></i> Become a Provider
                    </a>
                </div>
            </div>
        }

    </div>
</div>