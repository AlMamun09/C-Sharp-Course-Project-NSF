@model LocalScout.ViewModels.ServiceDetailsViewModel

@{
    // We get the title directly from the model now.
    ViewData["Title"] = Model.MainService?.ServiceName ?? "Service Details";
}

<div class="container my-5">
    @if (Model.MainService != null && Model.Provider != null)
    {
        <div class="row">
            <!-- Image Gallery Column -->
            <div class="col-lg-7">
                <h2 class="d-lg-none mb-3">@Model.MainService.ServiceName</h2> <!-- Title for mobile -->
                @if (Model.MainService.ImageUrls.Any())
                {
                    <img src="@Model.MainService.ImageUrls.First()" class="img-fluid rounded shadow mb-3" alt="Primary Service Image">
                    @if (Model.MainService.ImageUrls.Count > 1)
                    {
                        <div class="row row-cols-4 g-2">
                            @foreach (var imageUrl in Model.MainService.ImageUrls)
                            {
                                <div class="col">
                                    <img src="@imageUrl" class="img-fluid rounded" alt="Gallery Thumbnail">
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                     <img src="https://placehold.co/800x600/eee/ccc?text=No+Image" class="img-fluid rounded shadow mb-3" alt="Primary Service Image">
                }
                 <hr class="my-4">
                <h4>About This Service</h4>
                <p>@Model.MainService.Description</p>
            </div>

            <!-- Details & Booking Column -->
            <div class="col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h2 class="card-title d-none d-lg-block">@Model.MainService.ServiceName</h2> <!-- Title for desktop -->
                        <div class="d-flex align-items-center my-3">
                             <img src="@(Model.Provider.ProfilePictureUrl ?? "https://placehold.co/40x40/eee/ccc?text=P")" style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover;" class="me-3" alt="@Model.Provider.BusinessName">
                             <div>
                                <h5 class="mb-0">@Model.Provider.BusinessName</h5>
                                <span class="text-muted small">Provider</span>
                             </div>
                        </div>
                        <hr>
                        <ul class="list-unstyled text-muted">
                            <li class="mb-2"><i class="fa-solid fa-location-dot me-2 fa-fw"></i>@Model.Provider.BusinessAddress</li>
                            <li class="mb-2"><i class="fa-solid fa-clock me-2 fa-fw"></i>@Model.Provider.BusinessHours</li>
                            <li class="mb-2"><i class="fa-solid fa-calendar-check me-2 fa-fw"></i>Joined @Model.Provider.CreatedAt.ToString("MMM yyyy")</li>
                        </ul>
                        <hr>
                        <div class="text-end">
                            <p class="mb-1 small">Starts from</p>
                            <h3 class="fw-bold">$@Model.MainService.Price <span class="fw-normal small">/@Model.MainService.PricingUnit</span></h3>
                        </div>
                        <div class="d-grid mt-3">
                             <a href="#" class="btn btn-booking btn-lg">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- "OTHER SERVICES" SECTION -->
        @if(Model.OtherServices.Any())
        {
            <hr class="my-5">
            <h2 class="mb-4">More Services from @Model.Provider.BusinessName</h2>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach(var otherService in Model.OtherServices)
                {
                    <div class="col">
                        <a asp-action="ServiceDetails" asp-route-id="@otherService.Id" class="card-link-wrapper">
                            <div class="card h-100">
                                <img src="@(otherService.ImageUrls.FirstOrDefault() ?? "https://placehold.co/600x400/eee/ccc?text=No+Image")" class="card-img-top" alt="@otherService.ServiceName" style="height: 180px; object-fit: cover;">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@otherService.ServiceName</h5>
                                    <div class="mt-auto d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">$@otherService.Price <span class="fw-normal small">/@otherService.PricingUnit</span></span>
                                        <span class="btn btn-sm btn-outline-primary">View</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="text-center">
            <h2>Service Not Found</h2>
            <p>The service you are looking for does not exist.</p>
        </div>
    }
</div>