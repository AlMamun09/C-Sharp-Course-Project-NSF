@model LocalScout.ViewModels.CategoryServicesViewModel

@{
    ViewData["Title"] = $"Services in {Model.CategoryName}";
}

<div class="container my-5">
    <h1 class="display-5">@Model.CategoryName</h1>
    <p class="lead">Browse all available services in this category.</p>
    <hr />

    @if (!Model.Services.Any())
    {
        <div class="text-center py-5">
            <h3>No Services Found</h3>
            <p>There are currently no providers offering services in this category.</p>
            <a asp-action="Index" class="btn btn-primary mt-3">Back to Homepage</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var service in Model.Services)
            {
                <div class="col">
                    <!-- The entire card is now wrapped in a link to the details page -->
                    <a asp-action="ServiceDetails" asp-route-id="@service.ServiceId" class="card-link-wrapper">
                        <div class="service-card h-100">
                            <div class="service-card-img-container">
                                <img src="@(service.PrimaryImageUrl ?? "https://placehold.co/600x400/eee/ccc?text=No+Image")"
                                    class="service-card-img" alt="@service.ServiceName">
                            </div>
                            <div class="service-card-body">
                                <div>
                                    <h5 class="service-card-title">@service.ServiceName</h5>
                                    <div class="service-card-provider">
                                        <img src="@(service.ProviderProfilePictureUrl ?? "https://placehold.co/40x40/eee/ccc?text=P")"
                                            class="service-card-provider-img" alt="@service.ProviderBusinessName">
                                        <span>@service.ProviderBusinessName</span>
                                    </div>
                                    <ul class="list-unstyled text-muted small mt-3">
                                        <li class="mb-2"><i class="fa-solid fa-calendar-check me-2"></i>Joined
                                            @service.JoinedDate.ToString("MMM dd, yyyy")</li>
                                        <li class="mb-2"><i class="fa-solid fa-location-dot me-2"></i>@service.Location</li>
                                        <li class="mb-2"><i class="fa-solid fa-clock me-2"></i>@service.BusinessHours</li>
                                    </ul>
                                </div>
                                <div class="service-card-footer">
                                    <div class="service-card-price">
                                        @if (service.IsNegotiable)
                                        {
                                            <span class="fw-bold">Negotiable</span>
                                        }
                                        else
                                        {
                                            <span>TK @service.Price</span> <span class="unit">/ @service.PricingUnit</span>
                                        }
                                    </div>
                                    <!-- The button is now "Book Now" -->
                                    <div class="btn btn-booking">Book Now</div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>