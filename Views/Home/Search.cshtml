@model LocalScout.ViewModels.SearchResultsViewModel

<!-- New Search Bar Section -->
<div class="row justify-content-center my-4">
    <div class="col-md-8">
        <form asp-controller="Home" asp-action="Search" method="get" class="d-flex">
            <input type="search" name="query" class="form-control me-2" value="@Model.Query"
                placeholder="Search again..." aria-label="Search">
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
    </div>
</div>

@{
    ViewData["Title"] = $"Search Results for '{Model.Query}'";
}

<div class="container my-5">
    <h1 class="display-5">Search Results</h1>
    <p class="lead">Showing results for: <strong>"@Model.Query"</strong></p>
    <hr />



    @if (!Model.Results.Any())
    {
        <div class="text-center py-5">
            <h3>No Services Found</h3>
            <p>We couldn't find any services matching your search. Try searching for something else.</p>
            <a asp-action="Index" class="btn btn-primary mt-3">Back to Homepage</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4" id="services-grid">
            <partial name="_ServiceGridPartial" model="Model.Results" />
        </div>

        <div id="load-more-container" class="text-center mt-4">
            @if (ViewBag.HasMorePages)
            {
                <button id="load-more-btn" class="btn btn-primary" data-page-number="1" data-query="@Model.Query">
                    Load More
                </button>
            }
            <div id="loading-spinner" class="spinner-border" role="status" style="display: none;">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const loadMoreBtn = document.getElementById('load-more-btn');
            if (!loadMoreBtn) return;

            const servicesGrid = document.getElementById('services-grid');
            const loadingSpinner = document.getElementById('loading-spinner');

            loadMoreBtn.addEventListener('click', async function () {
                loadingSpinner.style.display = 'block';
                this.style.display = 'none';

                let currentPage = parseInt(this.getAttribute('data-page-number'));
                const nextPage = currentPage + 1;
                const query = this.getAttribute('data-query');
                const url = `/Home/LoadMoreSearchResults?query=${encodeURIComponent(query)}&pageNumber=${nextPage}`;

                try {
                    const response = await fetch(url);
                    if (response.ok) {
                        const html = await response.text();
                        servicesGrid.insertAdjacentHTML('beforeend', html);

                        const hasMorePages = response.headers.get('X-Has-More-Pages') === 'True';

                        if (hasMorePages) {
                            this.setAttribute('data-page-number', nextPage);
                            this.style.display = 'block';
                        }
                    }
                } catch (error) {
                    console.error('Error fetching more results:', error);
                    this.style.display = 'block';
                } finally {
                    loadingSpinner.style.display = 'none';
                }
            });
        });
    </script>
}