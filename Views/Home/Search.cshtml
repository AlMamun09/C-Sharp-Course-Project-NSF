@model LocalScout.ViewModels.SearchResultsViewModel

<!-- New Search Bar Section -->
<div class="row justify-content-center my-4">
    <div class="col-md-8">
        <form asp-controller="Home" asp-action="Search" method="get" class="d-flex">
            <input type="search" name="query" class="form-control me-2" value="@Model.Query"
                placeholder="Search again..." aria-label="Search">
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
    </div>
</div>

@{
    ViewData["Title"] = $"Search Results for '{Model.Query}'";
}

<div class="container my-5">
    <h1 class="display-5">Search Results</h1>
    <p class="lead">Showing results for: <strong>"@Model.Query"</strong></p>
    <hr />



    @if (!Model.Results.Any())
    {
        <div class="text-center py-5">
            <h3>No Services Found</h3>
            <p>We couldn't find any services matching your search. Try searching for something else.</p>
            <a asp-action="Index" class="btn btn-primary mt-3">Back to Homepage</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var service in Model.Results)
            {
                <div class="col">
                    <div class="service-card h-100">
                        <div class="service-card-img-container">
                            <img src="@(service.PrimaryImageUrl ?? "https://placehold.co/600x400/eee/ccc?text=No+Image")"
                                class="service-card-img" alt="@service.ServiceName">
                        </div>
                        <div class="service-card-body">
                            <h5 class="service-card-title">@service.ServiceName</h5>
                            <div class="service-card-provider">
                                <img src="@(service.ProviderProfilePictureUrl ?? "https://placehold.co/40x40/eee/ccc?text=P")"
                                    class="service-card-provider-img" alt="@service.ProviderBusinessName">
                                <span>@service.ProviderBusinessName</span>
                            </div>

                            <div class="service-card-footer">
                                <div class="service-card-price">
                                    @service.Price Taka<span class="unit">/@service.PricingUnit</span>
                                </div>
                                <a href="#" class="btn btn-booking">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>