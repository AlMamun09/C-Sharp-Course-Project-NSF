@model List<LocalScout.Models.ServiceCategoryRequest>

@{
    ViewData["Title"] = "Pending Category Requests";
}

<h1>@ViewData["Title"]</h1>
<p>Review the following new service category requests submitted by providers.</p>
<hr />

@if (!Model.Any())
{
    <p>There are currently no pending category requests.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Suggested Name</th>
                <th>Description</th>
                <th>Requested By</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.CategoryName</td>
                    <td>@request.CategoryDescription</td>
                    <td>@request.RequestedByName</td>
                    <td>@request.CreatedAt.ToDateTime().ToShortDateString()</td>
                    <td class="d-flex">
                        <form asp-action="ApproveCategoryRequest" method="post" class="me-1">
                            <input type="hidden" name="requestId" value="@request.Id" />
                            <button type="submit" class="btn btn-sm btn-success"
                                onclick="return confirm('Are you sure you want to approve this category?');">Approve</button>
                        </form>
                        <form asp-action="DenyCategoryRequest" method="post">
                            <input type="hidden" name="requestId" value="@request.Id" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to deny this category?');">Deny</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}