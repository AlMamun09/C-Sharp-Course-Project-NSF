@model List<LocalScout.Models.ServiceCategory>

@{
    ViewData["Title"] = "Category Management";
}

<!-- Non-Scrolling Header Section -->
<div class="admin-content-header">
    <div class="d-flex justify-content-between align-items-center">
        <h1>@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus me-2"></i> Create New Category
        </a>
    </div>
</div>

<!-- Scrollable Main Content Section -->
<div class="admin-content-main">
    @if (!Model.Any())
    {
        <p>No service categories have been created yet.</p>
    }
    else
    {
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Image</th>
                    <th>Category Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            <img src="@(category.ImageUrl ?? "https://placehold.co/100x60/eee/ccc?text=No+Image")" style="width: 100px; height: 60px; object-fit: cover;" class="rounded" />
                        </td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>
                            @if (category.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="d-flex gap-2 justify-content-end">
                                @if (category.IsActive)
                                {
                                    <a asp-action="ToggleStatus" asp-route-id="@category.Id" class="btn btn-sm btn-outline-warning" title="Deactivate">
                                        <i class="fa-solid fa-power-off"></i>
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="ToggleStatus" asp-route-id="@category.Id" class="btn btn-sm btn-outline-success" title="Activate">
                                        <i class="fa-solid fa-power-off"></i>
                                    </a>
                                }
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to permanently delete this category?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

